{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2016",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    // "baseUrl": "./"
  },
  "include": ["./src/**/*"],
}